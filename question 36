1208. Get Equal Substrings Within Budget

class Solution {
public:
    int equalSubstring(string s, string t, int maxCost) {
        int n = s.length();
        int start = 0;
        int maxLength = 0;
        int currentCost = 0;

        for (int i = 0; i < n; i++) {
            currentCost += abs(s[i] - t[i]);

            while (currentCost > maxCost) {
                currentCost -= abs(s[start] - t[start]);
                start++;
            }
            maxLength = max(maxLength, i - start + 1);
        }

        return maxLength;
    }
};
